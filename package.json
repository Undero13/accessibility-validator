{
  "name": "wd",
  "version": "1.0.0",
  "description": "HTML accessibility validator adapted to pages dynamically rendered by JS",
  "main": "index.js",
  "author": "Patryk Loter",
  "license": "MIT",
  "scripts": {
    "start": "(npm run tsc && electron ./compile)",
    "start2": "electron ./compile",
    "lint": "nodemon --exec \"npm run eslint\"",
    "eslint": "tslint --fix **/**.ts",
    "eslint-nofix": "tslint **/**.ts",
    "test": "jest",
    "pack": "(npm run tsc && electron-builder --dir)",
    "unpackage-asar": "(cd dist/win-unpacked/resources/ && asar extract app.asar app)",
    "build": "(npm run pack && npm run unpackage-asar && node fixed.js)",
    "copy-static": "(copyfiles -u 1 ./src/**/*.html ./compile && copyfiles -u 1 ./src/**/*.css ./compile)",
    "tsc": "tsc && npm run copy-static"
  },
  "build": {
    "extraResources": [
      {
        "from": "node_modules/nightmare",
        "to": "node_modules/nightmare",
        "filter": [
          "**/*"
        ]
      }
    ],
    "appId": "WD",
    "mac": {
      "category": "accessibility validator"
    },
    "files": [
        "./compile/**/*"
    ]
  },
  "devDependencies": {
    "@types/node": "^12.12.7",
    "copyfiles": "^2.1.1",
    "electron": "^7.0.0",
    "electron-builder": "^19.0.0",
    "fs-extra": "^8.1.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "tslint": "^5.20.1",
    "tslint-eslint-rules-recommended": "^1.2.2",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "color": "^3.1.2",
    "dom-parser": "^0.1.6",
    "dotenv": "^8.2.0",
    "electron-localizer": "^0.1.1",
    "nightmare": "^3.0.2"
  }
}
