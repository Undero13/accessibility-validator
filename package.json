{
  "name": "wd",
  "version": "1.0.0",
  "description": "HTML accessibility validator adapted to pages dynamically rendered by JS",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "lint": "nodemon --exec \"npm run eslint\"",
    "eslint": "eslint --fix **/**.js",
    "eslint-nofix": "eslint **/**.js",
    "test": "jest",
    "pack": "electron-builder --dir",
    "unpackage-asar": "(cd dist/win-unpacked/resources/ && asar extract app.asar app)",
    "build": "(npm run pack && npm run unpackage-asar && node fixed.js)"
  },
  "build": {
    "extraResources": [
      {
        "from": "node_modules/nightmare",
        "to": "node_modules/nightmare",
        "filter": [
          "**/*"
        ]
      }
    ],
    "appId": "WD",
    "mac": {
      "category": "accessibility validator"
    }
  },
  "author": "Patryk Loter",
  "license": "MIT",
  "devDependencies": {
    "electron": "^7.0.0",
    "electron-builder": "^19.0.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "fs-extra": "^8.1.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "prettier-eslint": "^9.0.0"
  },
  "dependencies": {
    "color": "^3.1.2",
    "dom-parser": "^0.1.6",
    "dotenv": "^8.2.0",
    "electron-localizer": "^0.1.1",
    "nightmare": "^3.0.2"
  }
}
