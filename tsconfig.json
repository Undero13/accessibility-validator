{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "compile",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./src/typings", "/node_modules"],
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "node_modules/**/*.{j,t}s"],
  "linterOptions": {
    "exclude": ["node_modules/**/*.{j,t}s"]
  }
}
